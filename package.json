{
  "name": "bun-starter",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run index.ts",
    "prepare": "husky",
    "format": "biome format src/ --write",
    "check": "biome check src/",
    "fix": "biome check src/ --fix",
    "typecheck": "bun tsc --noEmit && bun biome check src/ --error-on-warnings"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "@biomejs/biome": "2.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "node-cron": "^4.2.1",
    "zod": "^4.1.13",
    "dotenv": "^16.4.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --no-errors-on-unmatched --error-on-warnings --fix"
    ],
    "src/**/*.{ts,tsx}": [
      "bash -c 'bun tsc --noEmit --skipLibCheck'"
    ]
  }
}